/* pages/Mine/Mine.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.userinfo {
  display: flex;
  height: 15vh;
  flex-direction: column;
  align-items: center;
  
  position: 50% 50%;
}

.userinfo-header {
  position: relative;
  width: 100vw;
  height: 3000rpx;
  z-index: 999;
  overflow: hidden;
  text-align: center;
}
.userinfo-header-bg{
  width: 100%;
  height: 100vw;
  margin-top: -25vh;
  z-index: -9999;
  filter: blur(10px);
}

.avatar_nickname {
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  align-items: center;
}

.userinfo-colorfor{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  content: " ";
  background-color: rgb(255, 255, 255,0.2);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.arrow_part {
  /* padding-right: 90upx; */
  margin-right: 25px;
}

.right_arrow {
  width: 14px;
  height: 14px;
  border-top: 2px solid  #8799a3;
  border-right: 2px solid  #8799a3;
  transform: rotate(45deg);
  /* box-shadow: 0 0 6rpx black; */
  text-shadow: 0 0 3px black;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}

.nickname-group {
  display: flex;
  flex-direction: row;
}

.nickname {
  color: white;
  text-shadow: 0 0 6rpx black;
}
